# The following flags are set to test use of new features for python toolchains
# These flags will only work with Bazel 0.25.0 or above and are only needed for
#  //tests/docker/security/... & the docker/package_managers rules.
build --incompatible_use_python_toolchains
test --incompatible_use_python_toolchains

################################################################################

test:remote --remote_instance_name=projects/asci-toolchain/instances/default_instance
test:remote --crosstool_top=@buildkite_config//cc:toolchain
test:remote --host_javabase=@buildkite_config//java:jdk
test:remote --javabase=@buildkite_config//java:jdk
test:remote --extra_execution_platforms=@buildkite_config//config:platform
test:remote --host_platform=@buildkite_config//config:platform
test:remote --platforms=@buildkite_config//config:platform
test:remote --extra_toolchains=@buildkite_config//config:cc-toolchain
test:remote --action_env=BAZEL_DO_NOT_DETECT_CPP_TOOLCHAIN=1
test:remote --host_java_toolchain=@bazel_tools//tools/jdk:toolchain_hostjdk8
test:remote --java_toolchain=@bazel_tools//tools/jdk:toolchain_hostjdk8
test:remote --spawn_strategy=remote
test:remote --strategy=Javac=remote
test:remote --strategy=Closure=remote
test:remote --genrule_strategy=remote
test:remote --define=EXECUTOR=remote
test:remote --remote_cache=remotebuildexecution.googleapis.com
test:remote --remote_executor=remotebuildexecution.googleapis.com
test:remote --tls_enabled=true
test:remote --remote_timeout=3600
test:remote --auth_enabled=true
test:remote --jobs=50
